[alias]
  ci = commit -a
  co = checkout
  st = status -sb
  up = pull --rebase
  hist = log --pretty=format:\"%h | %ad | %s %Cgreen[%an]%Creset%Cred%d%Creset\" --graph --date=short
  d = diff
  dw = diff --word-diff
  dc = diff --cached

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
  grep = auto
  interactive = auto
  pager = true

[core]
  editor = vim
  pager = less
  excludesfile = ~/.gitignore

[push]
  default = tracking

[branch]
  autosetuprebase = always

[mergetool]
  keepBackup = false

[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode = false
  keepTemporaries = false
